                            option(value='42') 湖北
                            option(value='43') 湖南
                            option(value='15') 内蒙古
                            option(value='32') 江苏
                            option(value='36') 江西
                            option(value='22') 吉林
                            option(value='21') 辽宁
                            option(value='64') 宁夏
                            option(value='63') 青海
                            option(value='14') 山西
                            option(value='37') 山东
                            option(value='31') 上海
                            option(value='51') 四川
                            option(value='12') 天津
                            option(value='54') 西藏
