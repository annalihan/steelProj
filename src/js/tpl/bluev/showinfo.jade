                            option(value='53') 云南
                            option(value='33') 浙江
                            option(value='61') 陕西
                            option(value='1000') 其他
                        select.select_option(node-type='addressThird',name='city',verify='acttype=notEmpty&sucmsg=true&errmsg=请选择机构所在地')
                            option(value='') --请选择--
                        span(errtip=1)
        .display.W_fr
            p.photo
                img.pic(src='#{profile_img}')
            i.W_icon.icon_pf_approve_co
            .display_text
                p.W_f22.nickname(node-type='nickname') #{nickname}
                p.vtitle(node-type='verifyInfo') #{vtitle}
    include common/footer